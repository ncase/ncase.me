!!! 5
block vars
  - var bodyclass = null;
html(lang='en')
  head
    block head
      meta(charset='utf-8')
      meta(http-equiv='X-UA-Compatible', content='IE=edge,chrome=1')
      meta(name='viewport', content='width=device-width')
      title
        block title
          = locals.name
      link(rel='alternate', href=locals.url+'/feed.xml', type='application/rss+xml', title=locals.description)
      link(rel='stylesheet', href='/css/main.css')
      link(rel='stylesheet', href='/css/banner.css')
  body(class=bodyclass)

    a(href="/")
      div#ncase_header
        div(style="left: -37.5px")
        div(style="right: -37.5px")
        div: div
        div: div
    script(src='/js/ncase_header.js')

    header.header
      div.content-wrap
        block header
          div.logo
            h1
              a(href=locals.url)= locals.name
            p.description= locals.description
    
    div#content
      div.content-wrap
        block content
          h2 Welcome to zombocom!

    footer
      include footer
      